<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
        <h1 class="h2">Projects</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Create New</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Upload</button>
            </div>
        </div>
    </div>

    <form action="/admin/projects/create" method="POST">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Project Name" name="name">
                </div>
            </div>

             <div class="col-md-6">
                <div class="form-group">
                    <label for="github">Github URL</label>
                    <input type="text" class="form-control" id="github" placeholder="Enter github url" name="githubUrl">
                </div>
            </div>

             <div class="col-md-6">
                <div class="form-group">
                    <label for="tags">Tags</label>
                    <input type="text" class="form-control" id="tags" placeholder="Tags" name="tags">
                </div>
            </div>

             <div class="col-md-6">
                <div class="form-group">
                    <textarea class="form-control" name="description" id="desc" rows="3" >Enter Description</textarea>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <img src="/images/mean.jpg" width="250px" height="250px" srcset="">
                </div>
            </div>

        </div>

        <button class="btn btn-primary" type="submit">Create Project</button>
    </form>

</main>